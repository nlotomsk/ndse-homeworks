<form method="POST" class="mt-5">
  <div class="form-group">
    <label for="inputTitle">Заголовок</label>
    <input
      type="text"
      value="<%= books.title %>"
      name="title"
      class="form-control"
      id="inputTitle"
    />
  </div>

  <div class="form-group">
    <label for="inputDesc">Описание</label>
    <textarea rows="3" name="description" class="form-control" id="inputDesc">
<%= books.description %></textarea>
  </div>

  <div class="form-group">
    <label for="inputAuthors">Автор</label>
    <input
      type="text"
      value="<%= books.authors %>"
      name="authors"
      class="form-control"
      id="inputTitle"
    />
  </div>
  
  <div class="form-group">
    <label for="inputFavorite">Избранное</label>
    <input
      type="radio"
      value="true"
      name="favorite"
      class="form-control"
      id="inputTitle1"
    />
  </div>

  <div class="form-group">
    <label for="inputCover">fileCover</label>
    <input
      type="text"
      value="<%= books.fileCover %>"
      name="fileCover"
      class="form-control"
      id="inputTitle"
    />
  </div>

  <div class="form-group">
    <label for="inputFileName">fileName</label>
    <input
      type="text"
      value="<%= books.fileName %>"
      name="fileName"
      class="form-control"
      id="inputTitle"
    />
  </div>

  <div class="form-group">
    <label for="inputFileBook">fileBook</label>
    <input
      type="text"
      value="<%= books.fileBook %>"
      name="fileBook"
      class="form-control"
      id="inputTitle1"
    />
  </div>

  <div class="form-group text-right">
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
</form>
